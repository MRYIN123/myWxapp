/* pages/found/found.wxss */
page{
  height: 100%;
  width: 100%;
}
.user_top{
  margin-top: 20rpx;
  display: flex;
  width: 100%;
  height: 200rpx;
  flex-direction: row;
}
.user_left{
  width: 150rpx;
  height: 100%;
}
.user_avatar {
  width: 110rpx;
  height: 110rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  background-color: deepskyblue;
}
.user_right{
  margin-left: 20rpx;
  height: 70rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  background-color: burlywood;
}
.user_name{
  font-size: 30rpx;
}
.user_sep{
  width: 100%;
  height: 20rpx;
  background-color: #f6f6f6;
}
.user_item{
  display: flex;
  flex-direction: row;
  margin-left: 10rpx;
  width: 100%;
  height: 80rpx;
}
.user_item_arrow{
  margin-right: 10rpx;
  height: 60rpx;
  width: 60rpx;
}
.user_item_left{
  margin-left: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.user_item_line{
  width: 100%;
  margin-left: 10rpx;
  height: 1rpx;
  background-color: #f6f6f6;
}
